<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cmu.malicioustaskreminder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.cmu.malicioustaskreminder.CreateTask"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.cmu.malicioustaskreminder.TaskDetails"
            android:label="@string/title_activity_task_details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.cmu.malicioustaskreminder.TasksList"
            android:label="@string/title_activity_tasks_list" >
        </activity>
        <activity
            android:name="edu.cmu.malicioustaskreminder.ViewTask"
            android:label="@string/title_activity_view_task" >
        </activity>
    </application>

</manifest>
